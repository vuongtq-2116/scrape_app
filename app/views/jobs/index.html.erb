<p id="notice"><%= notice %></p>

<h1>Jobs(<%= Job.all.count%>)</h1>
<style>

.card{
  height: 370px;
  margin: 10px;
  padding: 5px;
}
.card-header{
  height: 120px;
  font-weight: bold;
}

.card-body{
  height: 150px;
}

.card-footer{
  height: 100px;
}

</style>

<div class = "container">
  <div class = "row">
    <% @jobs.each do |job| %>
      <div class="col-sm-3">
        <div class="card">
          <div class="card-header bg-success"><%= job.company %></div>
          <div class="card-body"><%= link_to job.title, job.url %></div>
          <div class="card-footer">
            <% if job.location.size <= 75 %>
            <%= job.location %>
            <% else %>
            <%= job.location[0..70] + "..." %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= paginate @jobs %>
<br>
